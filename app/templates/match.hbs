<div class="container text-center">

  <div class="row">
  <h2>Game Arena</h2>
  {{#if gameOver}}
    {{#if userWon}}
        <div class="col-sm-3 col-sm-offset-2 col-xs-5 winner-card">
          <div class="panel panel-success">
            <div class="panel-heading">
             <h3 class="panel-title">
               {{profile.name}}
             </h3>
           </div>
            <div class="panel-body">
              {{card-box card=userCard}}
            </div>
          </div>
        </div>
    {{else}}
      <div class="col-sm-3 col-sm-offset-2 col-xs-5 winner-card">
        <div class="panel panel-danger">
          <div class="panel-heading">
           <h3 class="panel-title">Mr. Roboto</h3>
         </div>
         <div class="panel-body">
            {{card-box card=botCard mistery=mistery}}
         </div>
        </div>
      </div>
    {{/if}}
  {{else}}
      <div class="col-sm-3 col-sm-offset-2 col-xs-5">
        <div class="panel panel-success">
          <div class="panel-heading">
           <h3 class="panel-title">
             {{profile.name}}
           </h3>
         </div>
          <div class="panel-body">
            {{card-box card=userCard}}
          </div>
        </div>
      </div>
      <div class="col-sm-2 col-xs-2">
        <h2>VS</h2>
      </div>
      <div class="col-sm-3 col-xs-5">
        <div class="panel panel-danger">
          <div class="panel-heading">
           <h3 class="panel-title">Mr. Roboto</h3>
         </div>
         <div class="panel-body">
            {{card-box card=botCard mistery=mistery}}
         </div>
        </div>
      </div>
    {{/if}}

  </div>
</div>
<footer class="footer-game {{if playing 'playing-now'}}">
		<div class="container">
				<div class="row">
						<div class="col-sm-2">
								<h4>My game cards</h4>
								<small>Random deck generated on each game</small>
						</div>
						<div class="col-sm-5">
								<div class="row">
                  {{#each model.userCards as |card|}}
                    <div class="col-xs-4">
                      {{card-box card=card onClick=(action 'chooseCard' card)}}
                    </div>
                  {{/each}}
								</div>
						</div>
						<div class="col-sm-5">
								<div class="row">
										<div class="col-xs-4">
                      <span class="score text-success">
                        Wins: <span class="score-number">{{profile.wins}}</span>
                      </span>
										</div>
										<div class="col-xs-4"><span class="score text-defaul">
                      Losses: <span class="score-number">{{profile.losses}}</span></span>
										</div>
										<div class="col-xs-4"><span class="score text-info">
                      Games: <span class="score-number">{{profile.games}}</span>
                    </span>
										</div>
								</div>
						</div>
				</div>
		</div>
</footer>
